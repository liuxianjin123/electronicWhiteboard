<template>
    <div class="title">
        <div class="title-icon">
            <img src="static/images/Board/yyLogo.png" alt="" @click="saves()"/>
            <h1 style="font-size:36px;" @click="controlShades()">{{ hospitalName }}{{ bqmc }}</h1>
        </div>
        <div class="title-date">
            <span @click="showmodals()">{{ sj }}</span>
        </div>
    </div>
</template>
<script>

export default {
    data(){
        return{
            bqmc:'',
            sj:''
        }
    },
    props:{
        hospitalName:String,
        wardName:String,
        dates:String,
    },
    mounted(){
        this.bqmc=this.wardName,
        this.sj=this.dates,
        console.log(this.$props)
    },
    methods:{
        saves(){
            this.$emit("save");
        },
        showmodals(){
            this.$emit("showModal");
        },
        controlShades(){
            this.$emit("controlShade");
        }
    },
    watch:{//监听指定数据的变化,只要变化就会触发
        'dates':function (newVal, oldVal) {
            this.sj = newVal;
        },
        'wardName':function (newVal, oldVal) {
            this.bqmc = newVal;
         }
    }
}
</script>
