body,
html,
.container {
    height: 100%;
    background: url('../../static/images/login/login.jpg') no-repeat;
    background-size: cover;
}

.forms {
    width: 400px;
    height: 400px;
    border-radius: 12px;
    position: absolute;
    right: 100px;
    top: 50%;
    margin-top: -200px;
    padding: 30px;
    background: url('../../static/images/login/fromBg.png') no-repeat;
}

.anticon {
    font-size: 18px;
}

.titles {
    text-align: center;
    height: 100px;
    margin-top: 10px;
}

.titles h2 {
    font-weight: bold !important;
    color: #fff;
    font-size: 30px;
    margin: 0;
}

.titles h3 {
    color: #fff;
    font-size: 12px;
}

.bg {
    width: 100%;
    color: #fff;
    display: block;
    font-size: 12px;
    position: absolute;
    margin-left: -11px;
}