import Vue from 'vue'
import Vuex from 'vuex'
//挂载Vuex
Vue.use(Vuex)

//创建VueX对象
const store = new Vuex.Store({
    state: {
        token: '',
        userId: '',
        baseUrl: 'http://172.16.252.250:8082',
        board: {
            boardBqdm: '0005', //病区代码
            boardItem: '', //同病区不同楼层的分组
            boardwardName: '' //病区名称
        }
    },
    mutations: {
        updateBoardItem(state, data) {
            this.state.board.boardBqdm = data
        },
    }
})

export default store