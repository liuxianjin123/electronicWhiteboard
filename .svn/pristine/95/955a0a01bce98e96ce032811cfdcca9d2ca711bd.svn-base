            this.int=-1;
        },
        async confirm(e) {//删除方法
            // console.log('/han/handover/deleteGroup/'+e+'');
            const res = await potdelete('/han/handover/deleteGroup/'+e+'');
            await this.arrcard();
            if(res.result){
                this.$message.success('删除成功');
            }else{
